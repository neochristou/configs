# Basic binds

super + o
	st -e vim ~/.config/i3/config
super + u
	st -e gotop
super + g
	$BROWSER
super + m
	spotify 
super + n
    sh -c '$BROWSER https://www.notion.so/'	
super + b
	nautilus
super + {period, comma, slash}
	exec sp {next, prev, play}
# Run terminal
super + Return
	st
# Window manager - kill window
super + shift + q
	i3 kill
# Start dmenu 
super + d 
	exec dmenu_run

super + grave
	dmenuunicode

# Restart network manager 
super + shift + o
	sudo systemctl restart network-manager.service

# Change keyboard language
super + space
	~/.config/i3/i3-keyboard-layout/i3-keyboard-layout cycle us gr

# Open new terminal at current directory
super + BackSpace
	$HOME/.config/i3/i3_shell.sh

super + i
	sh -c 'cd /media/neo/Storage; st'

#interactive screenshot by pressing printscreen
Print
	flameshot gui
#crop-area screenshot by pressing Mod + printscreen
super + Print
	flameshot full
